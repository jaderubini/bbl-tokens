{
  "font": {
    "family": {
      "brand": {
        "value": "Figtree",
        "type": "fontFamilies",
        "description": "Global default for the brand typeface. Usually applied to headings and subheadings."
      },
      "default": {
        "value": "\"Source Sans 3\"",
        "type": "fontFamilies",
        "description": "Global default for neutral (or functional) typeface. Usually applied to body copy and UI elements, sometimes to subheadings."
      },
      "mono": {
        "value": "Inconsolata",
        "type": "fontFamilies",
        "description": "Global default for monospaced typeface. Applied to code snippets and API-related information."
      }
    },
    "size": {
      "base": {
        "value": "16",
        "type": "fontSizes",
        "description": "Global default for the base font-size (1rem), which is the starting point for the Type Scale."
      },
      "scale": {
        "value": "1",
        "type": "fontSizes",
        "description": "Value hold for type scales."
      },
      "xs": {
        "value": "round({font.size.sm}/{font.size.scale})",
        "type": "fontSizes"
      },
      "sm": {
        "value": "round({font.size.md}/{font.size.scale})",
        "type": "fontSizes"
      },
      "md": {
        "value": "{font.size.base}",
        "type": "fontSizes"
      },
      "lg": {
        "value": "round({font.size.base}*{font.size.scale})",
        "type": "fontSizes"
      },
      "xl": {
        "value": "round({font.size.lg}*{font.size.scale})",
        "type": "fontSizes"
      },
      "xxl": {
        "value": "round({font.size.xl}*{font.size.scale})",
        "type": "fontSizes"
      },
      "hg": {
        "value": "round({font.size.xxl}*{font.size.scale})",
        "type": "fontSizes"
      },
      "xh": {
        "value": "round({font.size.hg}*{font.size.scale})",
        "type": "fontSizes"
      },
      "xxh": {
        "value": "round({font.size.xh}*{font.size.scale})",
        "type": "fontSizes"
      }
    },
